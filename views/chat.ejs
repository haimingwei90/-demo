<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/chat.css">
    <title>chathoom</title>
</head>

<body>

    <div class="box">

        <div class="left">
            <ul>

            </ul>
        </div>
        <div class="right">
            <nav>
                <a href="/login">登录</a>
                <a href="/registe">注册</a>
            </nav>
            <ul>
                <%userlist.forEach(rz=>{%>
                  <li><%=rz%></li>  
                <%})%>
            </ul>
        </div>

        <div class="info">
            <!-- <input type="text" name="" id="text" onchange="send(event)"> -->
           <textarea onchange="send(event)" id="text" cols="29" rows="10"></textarea>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io.connect();
        const infodom = document.querySelector(".info");   
        const textdom = document.getElementById("text");
        const ldom = document.querySelector(".left");
        const uldom = ldom.querySelector("ul");
        console.log(uldom);
        function send(event){
            socket.emit('say',event.target.value);
            
        }        
        socket.on('backsay',date=>{
            const lidom = document.createElement("li");
            console.log(date);
            
            lidom.innerHTML = date;
            uldom.appendChild(lidom);
            textdom.value = "";
            
        });
        
        
    </script>
</body>

</html>